@model MariosSpecialtyStore.Models.Review

@{
    Layout = "";
}

<div class="container review-partial">

    <div class="row">
        <div class="col-md-12">
            <form action="CreateReview" class="new-review">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProductId" value="@ViewBag.ProductId"/>
                <div class="form-group">
                    <label asp-for="Author" class="control-label"></label>
                    <input asp-for="Author" class="form-control" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Your Review</label>
                    <textarea asp-for="Content_Body" class="form-control" ></textarea>
                    <span asp-validation-for="Content_Body" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rating" class="control-label"></label>
                    <input type="number" asp-for="Rating" class="form-control" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="add-review-button" />
                </div>
            </form>
        </div>
    </div>
</div>
